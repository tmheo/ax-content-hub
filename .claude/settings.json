{
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "Bash(uv run pytest*)|WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff format \"$CLAUDE_TOOL_INPUT_FILE_PATH\""
          }
        ]
      }
    ]
  }
}
